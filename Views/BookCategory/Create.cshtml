@model BookCategoryCreateVM
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create new Book Category</h1>

<form  method="post" asp-controller="bookcategory" asp-action="create">
	<div class="form-group" style="width:500px; margin: 2rem;">
		<label for="Name" style="width: 500px">Name</label>
		<input type="text" asp-for=Name style="width: 500px" />
		<span class="text-danger" asp-validation-for=Name></span>
	</div>

	<div class="form-group" style="width:500px; margin: 2rem;">
		<label for="Description" style="width:"500px;">Description</label>
		<input type="text" asp-for=Description style="width:500px;" />
		<span class="text-danger" asp-validation-for=Description></span>
	</div>

	<button type="submit" style="margin: 2rem;" class="btn btn-primary">Create</button>
</form>
