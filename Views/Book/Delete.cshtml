@model PB503_Libary_Managment_System_ASP.NET.View_Models.BookVM.BookVM

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4>BookVM</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Title)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Title)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.PublicationYear)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.PublicationYear)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Category)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Category.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Publisher)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Publisher.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.AuthorIds)
		</dt>
		<dd class="col-sm-10">

			@if (Model.Authors.Count > 1)
			{
				@foreach (var author in Model.Authors)
				{
					@Html.DisplayFor(modelItem => author.FullName) <br />
				}
			}
			else if (Model.Authors.Count == 1)
			{
				@Html.DisplayFor(modelItem => Model.Authors[0].FullName)

			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.CreatedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.CreatedDate)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.UpdatedDate)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.UpdatedDate)
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="ID" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>
